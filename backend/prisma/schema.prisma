generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Panel {
  id          String @id @default(uuid())
  panelName   String @default("") @map("name")
  panelLength Int    @default(0) @map("length")
  panelWidth  Int    @default(0) @map("width")
  panelQty    Int    @default(0) @map("qty")

  @@map("panels")
}

model User {
  id        String    @id @default(uuid())
  name      String
  userName  String
  settingId Settings?
}

model Settings {
  id                    String  @id @default(uuid())
  nSawKerfValue         Int     @default(0)
  nMinWasteSize         Int     @default(0)
  nLeftTrim             Int     @default(0)
  nRightTrim            Int     @default(0)
  nBottomTrim           Int     @default(0)
  nTopTrim              Int     @default(0)
  nCuttingComplexity    Int
  nMaxLayoutSize        Int     @default(0)
  bCuttingLayoutMin     Boolean
  bMinmizePanelRotation Boolean
  bCutDirection         Boolean
  bRollMode             Boolean
  userId                String  @unique
  user                  User    @relation(fields: [userId], references: [id])
}

model memailuser {
  nEmailUserID   Int       @id @db.UnsignedInt
  sEmail         String    @unique(map: "memailuser_sEmail_key") @db.VarChar(255)
  sPassword      String    @db.VarChar(255)
  sFullName      String    @db.VarChar(200)
  dtExpiry       String    @db.VarChar(11)
  bSentReminder1 Int       @db.UnsignedTinyInt
  bSentReminder2 Int       @db.UnsignedTinyInt
  bSentReminder3 Int       @db.UnsignedTinyInt
  sComanyName    String    @db.VarChar(100)
  sContactNo     String    @db.VarChar(50)
  sPythaDongalNo String    @db.VarChar(50)
  bApproved      Int       @db.TinyInt
  bActive        Int       @default(0) @db.UnsignedTinyInt
  bEmailVerified Int       @default(0) @db.TinyInt
  trial          Int       @default(0) @db.TinyInt
  bFixed         Int?      @default(0) @db.TinyInt
  dtCreated      DateTime? @db.DateTime(0)
  dtModified     DateTime? @db.DateTime(0)
}

model Stock_Sheets {
  id     String @id @default(uuid())
  name   String @default("")
  length Int    @default(0)
  width  Int    @default(0)
  qty    Int    @default(0)

  @@map("stock_sheets")
}
